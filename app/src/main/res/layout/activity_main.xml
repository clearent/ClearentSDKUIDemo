<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/pair_reader_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pair Reader"
        app:layout_constraintBottom_toTopOf="@+id/readers_list_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/readers_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Readers List"
        app:layout_constraintBottom_toTopOf="@+id/transaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pair_reader_button" />

    <LinearLayout
        android:id="@+id/transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readers_list_button">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewColorPrimaryBoldSize16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Card Reader" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/card_reader_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/charge_amount_input"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:endIconMode="clear_text"
            app:placeholderText="Charge amount">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/charge_amount_edit_text"
                style="@style/TextPrimaryLight14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:inputType="numberDecimal"
                android:maxLength="50"
                android:padding="16dp"
                android:theme="@style/EditTextTheme" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/start_transaction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Transaction" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>